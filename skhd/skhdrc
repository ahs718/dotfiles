# focus window
lctrl - left: yabai -m window --focus west
lctrl - down: yabai -m window --focus south
lctrl - up: yabai -m window --focus north
lctrl - right: yabai -m window --focus east

# swap window
lctrl + shift - left: yabai -m window --swap west
lctrl + shift - down: yabai -m window --swap south
lctrl + shift - up: yabai -m window --swap north
lctrl + shift - right: yabai -m window --swap east

# balance window sizes
lctrl + alt + cmd - b: yabai -m space --balance

# float / unfloat window and center on screen
lctrl - space: yabai -m window --toggle float

# restart yabai
lctrl + alt - q: brew services restart yabai
